{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "@images/*": ["./src/assets/images"],
      "@styles/*": ["./src/assets/styles"],
      "@components/*": ["./src/shared/components"],
      "@hooks/*": ["./src/shared/hooks"]
    }
  },
  "include": [
    "./src/**/*",
    "gatsby-node.js",
    "./gatsby-config.ts",
    "./plugins/**/*",
    "src/pages",
    "src/assets/images",
    "cms"
  ]
}
